generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  admin    Boolean @default(false)
  cep      String
  password String
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int
  img         String
  createdAt   DateTime @default(now())
}
